create_table <%= table %><% if extra_args? %>, <%= extra_args %><% end %> do |t|
<% columns.each do |column| %>
      t.column <%= column.name %>, <%= column.type %><%= ", #{column.args}" if column.args %>
<% end %>
<% if timestamps? %>
      t.timestamps<%= " #{timestamps_args}" if timestamps_args? %>
<% end %>
end
